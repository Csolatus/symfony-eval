{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
    <div style="max-width: 600px; margin: 0 auto;">
        <div style="margin-bottom: 2rem;">
            <a href="{{ path('app_profile') }}" style="color: var(--color-text-muted); text-decoration: none;">&larr; Retour au profil</a>
        </div>

        <h1>Modifier le profil</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.fullName, 'Nom complet') }}
                        {{ form_widget(form.fullName) }}
                        {{ form_errors(form.fullName) }}
                    </div>
                
                    <div class="form-group">
                        {{ form_label(form.address, 'Adresse') }}
                        {{ form_widget(form.address) }}
                        {{ form_errors(form.address) }}
                    </div>

                    <div class="grid grid-cols-2" style="gap: 1rem;">
                        <div class="form-group">
                            {{ form_label(form.postalCode, 'Code postal') }}
                            {{ form_widget(form.postalCode) }}
                            {{ form_errors(form.postalCode) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.city, 'Ville') }}
                            {{ form_widget(form.city) }}
                            {{ form_errors(form.city) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Enregistrer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
