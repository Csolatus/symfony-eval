{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
    <h1>Votre Panier</h1>

    {% if items | length > 0 %}
        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.product.name }}</td>
                            <td>{{ item.product.price }} €</td>
                            <td>
                                <div style="display: flex; gap: 0.5rem; align-items: center;">
                                    <a href="{{ path('app_cart_decrease', {'id': item.product.id}) }}" class="btn btn-sm btn-secondary">-</a>
                                    <span>{{ item.quantity }}</span>
                                    <a href="{{ path('app_cart_add', {'id': item.product.id}) }}" class="btn btn-sm btn-secondary">+</a>
                                </div>
                            </td>
                            <td>{{ item.product.price * item.quantity }} €</td>
                            <td>
                                <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="text-danger">Retirer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" style="text-align: right;"><strong>Total :</strong></td>
                        <td colspan="2"><strong>{{ total }} €</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div style="margin-top: 2rem; text-align: right;">
            <a href="{{ path('app_checkout') }}" class="btn btn-primary">Passer la commande</a>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body" style="text-align: center; padding: 4rem 2rem;">
                <p style="margin-bottom: 2rem; font-size: 1.25rem;">Votre panier est vide.</p>
                <a href="{{ path('app_product_index') }}" class="btn btn-primary">Continuer vos achats</a>
            </div>
        </div>
    {% endif %}
{% endblock %}
