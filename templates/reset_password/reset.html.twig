{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <div style="max-width: 400px; margin: 0 auto;">
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center; margin-bottom: 2rem;">Nouveau mot de passe</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(resetForm) }}
                    <div class="form-group">
                        {{ form_label(resetForm.plainPassword.first, 'Nouveau mot de passe') }}
                        {{ form_widget(resetForm.plainPassword.first) }}
                        {{ form_errors(resetForm.plainPassword.first) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(resetForm.plainPassword.second, 'Répéter le mot de passe') }}
                        {{ form_widget(resetForm.plainPassword.second) }}
                        {{ form_errors(resetForm.plainPassword.second) }}
                    </div>

                    <button class="btn btn-primary btn-block">Réinitialiser le mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
