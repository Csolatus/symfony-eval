{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div style="max-width: 400px; margin: 0 auto;">
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center; margin-bottom: 2rem;">Réinitialiser votre mot de passe</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    
                    <div style="margin-top: 1rem; color: var(--color-text-muted); font-size: 0.875rem; margin-bottom: 1rem;">
                        Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Envoyer l'email de réinitialisation</button>
                {{ form_end(requestForm) }}
                
                <div style="text-align: center; margin-top: 1rem;">
                    <a href="{{ path('app_login') }}">Retour à la connexion</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
