{% extends 'base.html.twig' %}

{% block title %}Shop Collection{% endblock %}

{% block body %}
    <h1>Shop Collection</h1>

    {% for product in products %}
        <article>
            <img src="https://placehold.co/400x300?text={{ product.name|url_encode }}" alt="{{ product.name }}">
            <div>
                <div>{{ product.category ? product.category.name : 'Uncategorized' }}</div>
                <h3>
                    <a href="{{ path('app_product_detail', {id: product.id}) }}">{{ product.name }}</a>
                </h3>
                <div>{{ product.price / 100 }} â‚¬</div>
            </div>
        </article>
    {% else %}
        <p>No products found.</p>
    {% endfor %}
{% endblock %}
