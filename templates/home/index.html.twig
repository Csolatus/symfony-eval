{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Elevate Your Lifestyle</h1>
        <p class="hero-subtitle">Discover our curated collection of premium essentials designed for the modern individual.</p>
        <a href="{{ path('app_product_index') }}" class="btn-cta">Shop Collection</a>
    </div>
</section>

<!-- Featured Products -->
<div class="container">
    <h2 class="section-title">Latest Arrivals</h2>
    
    <div class="product-grid">
        {% for product in products %}
            <article class="card">
                <img src="https://placehold.co/400x300?text={{ product.name|url_encode }}" alt="{{ product.name }}" class="card-img">
                <div class="card-body">
                    <div class="card-category">{{ product.category ? product.category.name : 'Uncategorized' }}</div>
                    <h3 class="card-title">
                        <a href="{{ path('app_product_detail', {id: product.id}) }}" class="card-link">{{ product.name }}</a>
                    </h3>
                    <div class="card-price">{{ product.price / 100 }} â‚¬</div>
                </div>
            </article>
        {% else %}
            <p style="text-align: center; color: #64748b; grid-column: 1 / -1;">No products found. Start adding some!</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
